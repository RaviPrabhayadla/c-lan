#include <stdio.h>
void main() 
{
    int a[3][3];
    int b[3][3];
    int c[3][3];
    printf("Enter the elements of 1st matrix:");
    for(int i=0;i<3;i++)
    {
        for(int j=0;j<3;j++)
        {
        scanf("%d",&a[i][j]);
        }
    }
    printf("\nEnter the elements of 2nd matrix:");
    for(int i=0;i<3;i++)
    {
        for(int j=0;j<3;j++)
        {
        scanf("%d",&b[i][j]);
        }
    }
    printf("\n**FIRST MATRIX*");
    printf("\n");
    for(int i=0;i<3;i++)
    {
        for(int j=0;j<3;j++)
        {
        printf(" %d",a[i][j]);
        }
        printf("\n");
    }
    printf("\n**SECOND MATRIX*");
    printf("\n");
    for(int i=0;i<3;i++)
    {
        for(int j=0;j<3;j++)
        {
          printf(" %d",b[i][j]);
        }
        printf("\n");
    }
    for(int i=0;i<3;i++)
    {
        for(int j=0;j<3;j++)
        {
        c[i][j]=a[i][j]+b[i][j];
        }
    }
    printf("\n The sum of matrices is:\n");
    for(int i=0;i<3;i++)
    {
        for(int j=0;j<3;j++)
        {
          printf(" %d",c[i][j]);
        }
        printf("\n");
    }
}
