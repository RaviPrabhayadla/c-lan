#include<stdio.h>
void main(){

    int a[30];
    int len;
    printf("Enter the length of the array : \n");
    scanf("%d",&len);
    printf("Enter the values : \n");
    for(int i=0;i<len;i++)
    {
        scanf("%d",&a[i]);
    }
    for(int i=0;i<len;i++)
    {
     for(int j=0;j<len-i-1;j++)
     {
        if(a[j]<a[j+1])
        {
            int temp=a[j];
            a[j]=a[j+1];
            a[j+1]=temp;
        }
     }   
    }
    printf("The ascending order of the array is :");
    for(int i=0;i<len;i++)
       printf("%d ",a[i]);
}