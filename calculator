#include<stdio.h>
int main()
{ 
    int a,b;
    printf("enter two numbers:");
    scanf("%d %d",&a,&b);
    char op;
    printf("enter symbol");
    scanf(" %c",&op);
    switch(op)
    {
        case'+':printf("the sum is %d",a+b);
        break;
        case'-':printf("the diff is %d",a-b);
        break;
        case'*':printf("the mul is %d",a*b);
        break;
        case'/':printf("the div is %d",a/b);
        break;
        case'%':printf("the remainder is %d",a%b);
        break;
        default:
        printf("wrong input");
    }
}
