#include <stdio.h>
int main()
{
    int a,b;
    printf("enter a number:");
    scanf("%d",&a);
    printf("enter a number:");
    scanf("%d",&b);      
   int big=a<b?a:b;
   int step=big;
   while(1)
   {
       if(big%a==0 && big%b==0)
       {
           printf("lcm is %d",big);
           break;
       }
       else
     big=big+step;
   }
    
    
    
  }  
