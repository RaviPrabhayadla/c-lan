#include<stdio.h>
#include<conio.h>
int fact(int n);
int main()
{  int n,r,a,b,c,d;
    printf("enter no of students:");
    scanf("%d",&n);
    printf("enter no.of seats");
    scanf("%d",&r);
    b=n-r;
    a=fact(n);
    c= fact(b);
    d=a/c;
    printf("the no.of ways are:%d",d);

}
int fact(int n)
{
    if(n==1)
      return n;
    else
    {
        n*=fact(n-1);
        return n;
    }
}